                <th>IsVerified</th>
                <td>{{ adherent.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Ddn</th>
                <td>{{ adherent.ddn ? adherent.ddn|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ adherent.profession }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ adherent.adresse }}</td>
            </tr>
            <tr>
                <th>Adresse2</th>
                <td>{{ adherent.adresse2 }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ adherent.codepostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ adherent.ville }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ adherent.telephone }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_adherent_index') }}">back to list</a>

