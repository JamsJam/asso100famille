{% extends 'base.html.twig' %}

{% block title %}{% endblock %}


{% block body %}
{{parent()}}
<main class='home'>

    <section class="header">
        {% for message in app.flashes('success_form') %}

            <twig:Flash
                type="success_form"
                message="{{message}}"
            />
        {% endfor %}
        
        <twig:HeaderHero
            title="Ensemble pour la famille, à chaque étape de la vie"
            para1="L'association 100% Famille se dédie à la valorisation et au soutien de  la vie familiale à travers une multitude de services et d'activités  variées, touchant aussi bien les aspects sociaux, récréatifs que  culturels."
            cta="En savoir plus"
            ctalink="{{path('app_about')}}"
            img="{{asset('images/Rectangle_19.jpg')}}"
        />
    </section>


    <section class='events'>

        <div class="events__header">
            <h2>Les événements</h2>
            <a href="{{path('app_evenements')}}" class="events__all">Tous les événements</a>
        </div>
        
        {# {% for event in events %} #}
        <div class='events__container'>

            {% if events|length > 0 %}
                {% for event in events %}
                        
                    <twig:EventCard 
                        event="{{event}}"
                    />
                {% endfor %}
            {% else %}
                <p>Il n'y a pas d'evenements programmés cette semaines</p>
            {% endif %}


        </div>


        {# {% endfor %} #}
    </section>



    <section class="service">
        <h2>Les Services</h2>
        <div class="service__container">
            <twig:ServiceCard 
                titre="Familles"
                :items="[
                    'Coworking',
                    'Espace détente',
                    'Jardin partagé',
                    'Théâtre',
                    'Groupe de parole',
                    'Sortie détente',
                    'Atelier couture',
                    'Atelier bricolage',
                    'Défilé de mode',
                    'Dance'
                ]"
            />
             
            <twig:ServiceCard 
                titre="Enfants"
                :items="[
                    'Espace détente',
                    'Jardin partagé',
                    'Théâtre',
                    'Voyages',
                    'Sortie détente / Festival',
                    'Atelier lecture',
                    'Clas',
                    'Activités sportives'
                ]"
            />
            <twig:ServiceCard 
                titre="Jeunesses"
                :items="[
                    'PS Jeunes',
                    'Espace détente',
                    'Jardin partagé',
                    'Ciné / Débat',
                    'Théâtre',
                    'Voyages',
                    'Sortie détente / Festival',
                    'Clas',
                    'Activités sportives',
                    'Défilé de mode'
                ]"
            />
            <twig:ServiceCard 
                titre="Seniors"
                :items="[
                    'Coworking',
                    'Espace détente',
                    'Jardin partagé',
                    'Théâtre',
                    'Groupe de parole',
                    'Sortie détente / Festival',
                    'Voyages',
                    'Soirée jeux de société',
                    'Initiation informatique',
                    'Atelier couture / bricolage',
                    'Défilé de mode',
                    'Mémoire / baignade'
                ]"
            />

        </div>
    </section>


</main>
{% endblock %}
