<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html;charset=UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <meta name="keywords" content="{% block keyWord %}{% endblock %}">
        <meta name="geo.region" content="GP" />
        <meta name="geo.placename" content="Guadeloupe" />
        <meta name="geo.position" content="16.265;-61.551" />
        <meta name="ICBM" content="16.265, -61.551" />
        <title>{% block title %}Welcome!{% endblock %}</title>

        {# <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>"> #}
        {% block stylesheets %}
             {# <link rel="stylesheet" href="{{ asset('styles/app.scss') }}"> #}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header>
            <twig:Navigation />
        </header>
        
        
            {% block body %}
                <div class="modal" {{stimulus_controller('modalmanager')|stimulus_target('modalmanager', 'modal')|stimulus_action('modalmanager','openModal','responsivnav:getModalEvent@window')|stimulus_action('modalmanager','showOnlyOnMobile','resize@window')}}>
                    <div class="modal__container">
                        {{ ux_icon('iconamoon:close-bold',{'class':'close', 'data-action':'click->modalmanager#closeModal'}) }}
                        <div class="logo">
                            
                            <a href="{{path('app_home')}}">
                            {# <img src="" alt="logo Association 100% famille"> #}
                                Association 100% famille
                            </a>
                        </div>
                        <div class="modal__link">
                            <a class="{{ app.current_route == 'app_about' ? 'navLink active' : 'navLink' }}" href="{{path('app_about')}}">A propos</a>
                            <a class="{{ app.current_route == 'app_evenements' ? 'navLink active' : 'navLink' }}" href="{{path('app_evenements')}}">Evenements</a>
                            <a class="{{ app.current_route == 'app_contact' ? 'navLink active' : 'navLink' }}" href="{{path('app_contact')}}">Contact</a>
                            
                        </div>
                        <div class="modal__footer">
                            <a class="btn--accent2" href="{{path('app_register')}}">J'adhère</a>
                        </div>
                    </div>
                </div>
            {% endblock %}

            <twig:Footer />


    </body>
</html>
